if ! [ -d .venv ]
then
    python -m venv .venv
    . .venv/bin/activate
    pip install -U coverage setuptools setuptools_scm wheel \
        mkdocs 'mkdocstrings[python]' mkdocs-material mkdocs-macros-plugin \
        mkdocs-git-revision-date-localized-plugin
    pip install -e .
else
    . .venv/bin/activate
fi
