#!/usr/bin/bash

# Green color in terminal
green='\033[0;32m'
red='\033[0;31m'
yellow='\033[0;33m'
blue='\033[0;34m'
magenta='\033[0;35m'
cyan='\033[0;36m'

# Clear the colors
clear='\033[0m'


if [[ "$1" == *".log" ]]; then
    printf '%s\n' "$1"
    
    tail -n 100 -f $1 | sed \
			    -e 's/\(.*INFO.*\)/\x1B[32m\1\x1B[39m/' \
			    -e 's/\(.*DEBUG.*\)/\x1B[33m\1\x1B[39m/'\
			    -e 's/\(.*ERROR.*\)/\x1B[31m\1\x1B[39m/'\
			    -e 's/\(.*WARN.*\)/\x1B[35m\1\x1B[39m/'
    #[[ $line = DEBUG* ]] && echo -e "${cyan}$line${clear}"
    #[[ $line = WARN* ]] && echo -e "${yellow}$line${clear}"
    #[[ $line = ERROR* ]] && echo -e "${red}$line${clear}"
			    
else
    echo -e "${red}FILE NOT A LOG FILE${clear}"
fi


